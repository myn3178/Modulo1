Algoritmo "Triângulo"
Var
    base, altura, area: Real;
Inicio
      Escreva("Digite o valor da base: ")
      Leia(base)
      Escreva("Digite o valor da altura: ")
      Leia(altura)
      
      //Calculando a área
      
      area <- (base * altura) /2
      
      //Exibindo o resultado na tela
      
      Escreva("A área do triângulo é: ", area)

Fimalgoritmo