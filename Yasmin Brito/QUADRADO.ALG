Algoritmo "Quadrado"
Var
    lado1, lado2, area: Real;
Inicio
      Escreva("Digite o valor do primeiro lado: ")
      Leia(lado1)
      Escreva("Digite o valor do segundo número: ")
      Leia(lado2)
      
      //Calculando a área
      
      area <- (lado1 * lado2)
      
      //Exibindo o resultado na tela
      
      Escreva("A área do quadrado é: ", area)


Fimalgoritmo